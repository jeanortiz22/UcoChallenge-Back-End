spring.application.name=UcoChallengeGateway

# Puerto del Gateway
server.port=8081

# Configuracion de Auth0 (Resource Server)
# El dominio de Auth0 que usaste: dev-kkp1gdpup1nvbr6q.us.auth0.com
spring.security.oauth2.resourceserver.jwt.issuer-uri=https://dev-kkp1gdpup1nvbr6q.us.auth0.com/
spring.security.oauth2.resourceserver.jwt.audience=https://api.ucochallenge.com


# Enrutamiento: Redirige /api/v1/usuarios/** al Microservicio (8080)
spring.cloud.gateway.server.webflux.routes[0].id=servicio-ejemplo
spring.cloud.gateway.server.webflux.routes[0].uri=http://localhost:8080
spring.cloud.gateway.server.webflux.routes[0].predicates[0]=Path=/api/**