package co.edu.uco.parametersservice.catalog;

import java.util.HashMap;
import java.util.Map;

public class ParameterCatalog {
	
	private static Map<String, String> parameters = new HashMap<>();
	
	private ParameterCatalog() {
		super();
	}
	
	static {
		parameters.put("FechaDefectoMaxima", "31/12/9999");
		parameters.put("CorreoAdministrador", "admin@uco.edu.co");
		parameters.put("NumeroMaximoReintentosEnvioCorreo", "8");
	}
	
	public static String getParameter(String key) {
		return parameters.get(key);
	}
	
	public static void synchronizeParameters(String key, String value) {
		parameters.put(key, value);
		
	}
	
	public static String removeParameter(String key) {
		return parameters.remove(key);
	}
	
	public static Map<String, String> getAllParameters() {
		return parameters;
	}
	

}
