package co.edu.uco.ucochallenge.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.config.annotation.web.builders.HttpSecurity;
import org.springframework.security.config.annotation.web.configuration.EnableWebSecurity;
import org.springframework.security.web.SecurityFilterChain;
import org.springframework.web.servlet.config.annotation.CorsRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;
import static org.springframework.security.config.Customizer.withDefaults;

@Configuration
@EnableWebSecurity
public class SecurityConfig {

    @Bean
    public SecurityFilterChain filterChain(HttpSecurity http) throws Exception {
        http
            // 1. DESHABILITAR CSRF: Es necesario para APIs REST/JWT/OIDC
            .csrf(csrf -> csrf.disable()) 
            
            // 2. AUTORIZACIÓN DE RUTAS
            .authorizeHttpRequests(authorize -> authorize
                // La API de usuarios REQUIERE un token de Auth0 válido
                .requestMatchers("/api/v1/usuarios/**").authenticated() 
                // Permite acceso libre a cualquier otra URL no especificada
                .anyRequest().permitAll() 
            )
            
            // 3. CONFIGURAR COMO RESOURCE SERVER OAUTH2/OIDC
            .oauth2ResourceServer(oauth2 -> oauth2
                .jwt(withDefaults()) // Usa la configuración JWT de application.properties
            );

        return http.build();
    }
    
    // 4. CONFIGURACIÓN DE CORS (Para permitir peticiones desde Vue: localhost:5173)
    @Bean
    public WebMvcConfigurer corsConfigurer() {
        return new WebMvcConfigurer() {
            @Override
            public void addCorsMappings(CorsRegistry registry) {
                registry.addMapping("/**")
                        .allowedOrigins("http://localhost:5173") // ⬅️ URL de tu frontend Vue
                        .allowedMethods("GET", "POST", "PUT", "DELETE", "OPTIONS");
            }
        };
    }
}